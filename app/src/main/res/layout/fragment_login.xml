<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.arun_5540.penzone.LoginFragment">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">





        <EditText
            android:drawableStart="@drawable/ic_smartphone"
            android:drawablePadding="5dp"
            android:id="@+id/editMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="phone"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.366"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.132" />

        <Button
            android:id="@+id/buttonContinue"
            android:layout_width="135dp"
            android:layout_height="43dp"
            android:text="@string/Continue"
            android:textColor="@color/cardview_light_background"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginLeft="26dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="103dp"
            app:layout_constraintTop_toBottomOf="@+id/editMobile" />

        <Button
            android:id="@+id/buttonSkip"
            android:layout_width="145dp"
            android:layout_height="42dp"
            android:text="@string/skip"
            android:textColor="@color/cardview_light_background"
            android:backgroundTint="@color/colorPrimary"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonContinue"
            android:layout_marginRight="40dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/buttonContinue"
            android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="1.0" />

        <EditText
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_house_key"
            android:id="@+id/editPasswordLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.366"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editMobile"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonContinue" />

    </android.support.constraint.ConstraintLayout>
</FrameLayout>
